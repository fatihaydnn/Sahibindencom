@model SahibindenBitirmeProjesi.Web.Models.Vms.SmallCartViewModel



@if (Model != null)
{
    <p>Item in cart : <span clsas="badge badge-primary">@Model.NumberOfItems</span></p>
    <p>Total : <b>@Model.TotalAmount.ToString()</b></p>
    <a class="btn btn-outline-success float-left" asp-controller="Cart" asp-action="Index">View to Cart</a>
    <a class="btn btn-outline-danger float-left" asp-controller="Cart" asp-action="Clear">Clear the Cart</a> 
}
else
{ 
    <p>Your cart is empty..!</p>
}

