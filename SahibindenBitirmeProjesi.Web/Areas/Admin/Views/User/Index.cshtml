@model IEnumerable<SahibindenBitirmeProjesi.Entity.Entities.Concrete.AppUser>
@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<div class="col-sm-12">
	<div class="form-group">
		<h4 class="card-title">List of Users</h4>
	</div>
	<div class="form-group">
		<table class="table table-hover">
			<thead>
				<tr>
					<th>Id</th>
					<th>Name</th>
					<th>Email</th>
					<th>Remove</th>
				</tr>
			</thead>
			<tbody>
				@foreach (var item in Model)
				{
				<tr>
					<td>@item.Id</td>
					<td>@item.UserName</td>
					<td>@item.Email</td>
					
					<td>
						<a asp-action="Remove" asp-route-id="@item.Id" class="btn btn-danger confirmDeletion">Remove</a>
					</td>
				</tr>

				}

			</tbody>
		</table>
	</div>
</div>